@model IEnumerable<COMP2084Assign2Real.Models.UserRental>

@{
    ViewData["Title"] = "Signup here!";
}

<h1>Sign up to begin renting!</h1>

<p>
    <a asp-action="Create">Sign up Today!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.UserRentalId" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.UserRentalId" class="btn btn-danger">Delete</a>
                    }
                   
                    <a asp-action="Details" asp-route-id="@item.UserRentalId" class="btn btn-primary">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
