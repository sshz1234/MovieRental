@model IEnumerable<COMP2084Assign2Real.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Browse and Critique Movies!</h1>

<p>
    <a asp-action="Create">Critique a new movie!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rating)
            </td>
            <td>
                    @if (User.IsInRole("Administrator"))
                {
                        <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-danger">Delete</a>
                }
                else if (User.Identity.IsAuthenticated){
                        <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-secondary">Edit</a>
                }
                <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary">Details</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
