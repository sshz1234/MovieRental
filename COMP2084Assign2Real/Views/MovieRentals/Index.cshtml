@model IEnumerable<COMP2084Assign2Real.Models.MovieRental>

@{
    ViewData["Title"] = "movies";
}

<h1>Movie Rentals</h1>

<p>
    <a asp-action="Create"> Rent a movie!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.owingAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rentalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRental)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.owingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rentalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRental.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieRentalId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovieRentalId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieRentalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
