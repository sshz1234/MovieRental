@model IEnumerable<COMP2084Assign2Real.Models.MovieRental>

@{
    ViewData["Title"] = "movies";
}

<h1>Movie Rentals</h1>

<p>
    <a asp-action="Create"> Rent a movie!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.owingAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rentalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRental)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.owingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rentalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRental.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.name)
            </td>
            <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.MovieRentalId" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.MovieRentalId" class="btn btn-danger">Delete</a>
                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-secondary">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary">Details</a>
               
            </td>
        </tr>
}
    </tbody>
</table>
